{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "sourceMap": false,
    "removeComments": false,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
