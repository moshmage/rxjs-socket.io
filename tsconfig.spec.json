{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES2016", "DOM"],
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "spec/",
    "declaration": false,
    "moduleResolution": "node",
    "listFiles": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ]
}
